  <UserControl.Styles>
    <Style Selector="DataGridCell.ActualQuantity">
      <Setter Property="FontWeight" Value="Bold" />
      <Setter Property="Background" Value="LightGreen" />
    </Style>
  </UserControl.Styles>

  <ScrollViewer Margin="10" AllowAutoHide="False">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="0.9*"></RowDefinition>
        <RowDefinition Height="0.1*"></RowDefinition>
      </Grid.RowDefinitions>
      <DataGrid Name="MyDataGrid" Grid.Row="0" Grid.Column="0" Items="{Binding GridCollectionFilteredItems}"
                AutoGenerateColumns="False" >
        <DataGrid.Columns>
          <DataGridTextColumn Header="Item Code" Binding="{Binding Code}" Width="130"  HeaderTemplate="{StaticResource CodeHeader}" />
          <DataGridTextColumn Header="Item Description" Binding="{Binding Description}" Width="250" />

          <DataGridTemplateColumn Header="Q.ty" CellStyleClasses="ActualQuantity">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate DataType="model:InventoryItem">
                <TextBlock Text="{Binding ActualQuantity}" VerticalAlignment="Center" HorizontalAlignment="Center" />
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.CellEditingTemplate>
              <DataTemplate DataType="model:InventoryItem">
                <NumericUpDown Value="{Binding ActualQuantity}" HorizontalAlignment="Stretch" Minimum="-120" Maximum="120"  />
              </DataTemplate>
            </DataGridTemplateColumn.CellEditingTemplate>
          </DataGridTemplateColumn>

          <DataGridTextColumn Header="Last Update" Binding="{Binding LastInventoryUpdate}" Width="100" />

          <DataGridTemplateColumn Header="">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <Button Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}},
                        Path=DataContext.DeleteItemCommand}" CommandParameter="{Binding}">
                  <Path Stretch="Uniform" Width="18" Height="18" 
                        Data="{StaticResource ResourceKey=delete_regular}"
                        Fill="{StaticResource ResourceKey=button_foreground}">
                  </Path>
                </Button>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>
        </DataGrid.Columns>
      </DataGrid>

      <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="10,10">
        <Border  Grid.Row="2" Grid.Column="1"
             BorderBrush="Gray" BorderThickness="3"
             CornerRadius="5"
             VerticalAlignment="Center"
             HorizontalAlignment="Center">
          <Button Width="120" Command="{Binding SaveUpdatesCommand}">
            <StackPanel Orientation="Horizontal">
              <Path Stretch="Uniform" Width="36" Height="36"
                    Data="{StaticResource ResourceKey=save_as_regular}"
                    Fill="{StaticResource ResourceKey=path_gradiend_brush}">

              </Path>
              <TextBlock Margin="10,0" VerticalAlignment="Center">Save</TextBlock>
            </StackPanel>
          </Button>
        </Border>

        <Border  Grid.Row="2" Grid.Column="1" Margin="10,0"
             BorderBrush="Gray" BorderThickness="3"
             CornerRadius="5"
             VerticalAlignment="Center"
             HorizontalAlignment="Center">
          <Button Width="120" Command="{Binding CancelUpdateCommand}">
            <StackPanel Orientation="Horizontal">
              <Path Stretch="Uniform" Width="36" Height="36"
                    Data="{StaticResource ResourceKey=sign_out_regular}"
                    Fill="{StaticResource ResourceKey=path_gradiend_brush}">
              </Path>
              <TextBlock Margin="10,0" VerticalAlignment="Center">Cancel</TextBlock>
            </StackPanel>
          </Button>
        </Border>
      </StackPanel>
    </Grid>
  </ScrollViewer>
</UserControl>
