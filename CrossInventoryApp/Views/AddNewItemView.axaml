  </UserControl.Resources>
  
  <UserControl.Styles>    
    <Style Selector="TextBox">
      <Setter Property="Background" Value="Yellow"/>
    </Style>    
    <Style Selector="NumericUpDown">
      <Setter Property="Background" Value="Yellow"/>
    </Style>
  </UserControl.Styles>

  <Grid ShowGridLines="False" Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="20*"></RowDefinition>
      <RowDefinition Height="30*"></RowDefinition>
      <RowDefinition Height="20*"></RowDefinition>
      <RowDefinition Height="30*"></RowDefinition>
      <RowDefinition Height="30*"></RowDefinition>
      <RowDefinition Height="30*"></RowDefinition>
      <RowDefinition Height="20*"></RowDefinition>
      <RowDefinition Height="30*"></RowDefinition>
      <RowDefinition Height="20*"></RowDefinition>
      <RowDefinition Height="30*"></RowDefinition>
      <RowDefinition Height="20*"></RowDefinition>
      <RowDefinition Height="80*"></RowDefinition>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0">Code Number</TextBlock>

    <TextBox Grid.Row="1" Margin="5" Text="{Binding Code}" TabIndex="0" Focusable="True"></TextBox>

    <TextBlock Grid.Row="2">Description</TextBlock>

    <TextBox Grid.Row="3" Grid.RowSpan="3" Margin="5" Text="{Binding Description}" TabIndex="1"></TextBox>

    <TextBlock Grid.Row="6">Actuall quantity</TextBlock>

    <NumericUpDown Grid.Row="7" Margin="5" Value="{Binding Quantity}" TabIndex="2"></NumericUpDown>

    <TextBlock Grid.Row="8">Inventory Date</TextBlock>

    <DatePicker Grid.Row="9" SelectedDate="{Binding InventoryDate}" TabIndex="3"></DatePicker>

    <StackPanel Grid.Row="10" Grid.RowSpan="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,10,0,0">

      <Border  Grid.Row="2" Grid.Column="1"
           BorderBrush="Gray" BorderThickness="3"
           CornerRadius="5"
           VerticalAlignment="Center"
           HorizontalAlignment="Center">
        <Button Width="120" Command="{Binding SaveNewItemCommand}">
          <StackPanel Orientation="Horizontal">
            <Path Stretch="Uniform" Width="36" Height="36"
                  Data="{StaticResource ResourceKey=save_as_regular}"
                  Fill="{StaticResource ResourceKey=path_gradiend_brush}">

            </Path>
            <TextBlock Margin="10,0" VerticalAlignment="Center">Save</TextBlock>
          </StackPanel>
        </Button>
      </Border>

      <Border  Grid.Row="2" Grid.Column="1" Margin="10,0"
           BorderBrush="Gray" BorderThickness="3"
           CornerRadius="5"
           VerticalAlignment="Center"
           HorizontalAlignment="Center">
        <Button Width="120" Command="{Binding CancelNewItemCommand}">
          <StackPanel Orientation="Horizontal">
            <Path Stretch="Uniform" Width="36" Height="36"
                  Data="{StaticResource ResourceKey=sign_out_regular}"
                  Fill="{StaticResource ResourceKey=path_gradiend_brush}">
            </Path>
            <TextBlock Margin="10,0" VerticalAlignment="Center">Cancel</TextBlock>
          </StackPanel>
        </Button>
      </Border>
    </StackPanel>

  </Grid>
</UserControl>
